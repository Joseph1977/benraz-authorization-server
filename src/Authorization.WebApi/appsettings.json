    "SetPasswordEndpointUrl": "http://localhost:4204/set-password"
  },
  "FacebookSsoService": {
    "RedirectUri": "http://localhost:60341/v1/auth/facebook-callback"
  },
  "GoogleSsoService": {
    "RedirectUri": "http://localhost:60341/v1/auth/google-callback"
  },
  "TokenValidation": {
    "Audience": "Authorization"
  },
  "BenrazAuthGateway": {
    "BaseUrl": "http://localhost:60341"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore.Authentication.JwtBearer.JwtBearerHandler": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "DisableSwagger": false,
  "EnablesApplicationInsights": false,
  "InjectDBCredentialFromEnvironment": false,
