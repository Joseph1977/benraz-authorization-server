{
  "ConnectionStrings": {
    "Authorization": "Data Source=sql.Benraz.com;Integrated Security=SSPI;Initial Catalog=Benraz.Authorization"
  },
  "General": {
    "LogFolder": "C:\\Logs\\authorization.Benraz.com"
  },
  "InternalSsoService": {
    "AuthorizeEndpointUrl": "https://sso-portal.benraz.com/login",
    "ConfirmEmailEndpointUrl": "https://sso-portal.benraz.com/confirm-email",
    "SetPasswordEndpointUrl": "https://sso-portal.benraz.com/set-password"
  },
  "FacebookSsoService": {
    "RedirectUri": "https://authorization.benraz.com/v1/auth/facebook-callback"
  },
  "GoogleSsoService": {
    "RedirectUri": "https://authorization.benraz.com/v1/auth/google-callback"
  },
  "TokenValidation": {
    "Audience": "Benraz Authorization Server"
  },
  "BenrazAuthGateway": {
    "BaseUrl": "https://authorization.benraz.com"
  },
  "BenrazServices": {
    "BaseUrl": "https://services.benraz.com/"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore.Authentication.JwtBearer.JwtBearerHandler": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "DisableSwagger":  true
}


